{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist/server",
    "rootDir": ".",
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules"]
}
